{
  "manifest_version": 2,

  "name": "AutoSkip",
  "description": "Auto skip video player",
  "version": "3.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["auto-skip.js"]
    }
  ],

  "permissions": [
    "tabs",
    "*://*/*",
    "cookies",
    "activeTab",
    "storage"
  ]
}